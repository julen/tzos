{% from "macros/_xml.html" import render_transaction %}
<tig>
    <term id="[[ term_id ]]">[[ term ]]</term>
    <termNote type="normativeAuthorization"
        target="{% if normative_authorization_org %}[[ normative_authorization_org ]]"{% endif %}>{% if normative_authorization != "none" and normative_authorization_org != "none" %}[[ normative_authorization ]]{% endif %}</termNote>
    <termNote type="termType">{% if term_type != "none" %}[[ term_type ]]{% endif %}</termNote>
    <termNote type="partOfSpeech">{% if part_of_speech != "none" %}[[ part_of_speech ]]{% endif %}</termNote>
    <admin type="originatingPerson">[[ orig_person ]]</admin>
    <admin type="conceptOrigin">{% if concept_origin %}[[ concept_origin ]]{% endif %}</admin>
    <admin type="elementWorkingStatus">{% if working_status %}workingElement{% else %}starterElement{% endif %}</admin>
    <admin type="entrySource">{% if entry_source %}[[ entry_source ]]{% endif %}</admin>
    <admin type="productSubset">{% if product_subset != "none" %}[[ product_subset ]]{% endif %}</admin>
    <descrip type="example">{% if example %}[[ example ]]{% endif %}</descrip>
    <descrip type="explanation">{% if explanation %}[[ explanation ]]{% endif %}</descrip>
    <descrip type="context">{% if context %}[[ context ]]{% endif %}</descrip>
    <ref{% if xref_id %} target="[[ xref_id ]]"{% endif %} type="crossReference">{% if cross_reference %}[[ cross_reference ]]{% endif %}</ref>
    [[ render_transaction(transac_type, date, username) ]]
</tig>
