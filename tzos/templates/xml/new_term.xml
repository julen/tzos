{% from "macros/_xml.html" import render_transaction %}
<tig>
    <term id="[[ term_id ]]">[[ term ]]</term>
    {# XXX: review this #}
    {% if normative_authorization %}
    <termNote type="normativeAuthorization"
        target="roid-Euskaltzaindia">[[ normative_authorization ]]</termNote>
    {% endif %}
    <admin type="originatingPerson">[[ orig_person ]]</admin>
    {% if concept_origin %}
    <admin type="conceptOrigin">[[ concept_origin ]]</admin>
    {% endif %}
    <admin type="elementWorkingStatus">{% if make_public %}workingElement{% else %}starterElement{% endif %}</admin>
    {% if entry_source %}
    <admin type="entrySource">[[ entry_source ]]</admin>
    {% endif %}
    {% if context %}
    <descrip type="context">[[ context ]]</descrip>
    {% endif %}
    {# TODO: add non-required fields #}
    [[ render_transaction(transac_type, date, username) ]]
</tig>
